generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Job {
  id          String   @id
  title       String
  resort      String
  location    String
  salary      String
  type        String
  difficulty  Int
  image       String
  featured    Boolean  @default(false)
  description String?
  requirements String[]
  benefits    String[]
  url         String?
  company     String?
  housing     Boolean?
  createdAt   DateTime @default(now())

  @@index([company])
  @@index([resort])
}
